@model ContainerAutomationApp.Models.LeaveRequest

<h2>Confirm Delete</h2>

<div>
    <h4>Are you sure you want to delete this leave request?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Worker</dt>
        <dd class="col-sm-10">@Model.Worker.Name</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
