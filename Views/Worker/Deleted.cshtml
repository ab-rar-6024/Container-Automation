@model IEnumerable<ContainerAutomationApp.Models.DeletedWorker>

<h2>ðŸ—‚ Deleted Worker History</h2>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Certification</th>
            <th>Crane</th>
            <th>Shift</th>
            <th>Deleted At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Certification</td>
                <td>@item.Crane</td>
                <td>@item.Shift</td>
                <td>@item.DeletedAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
