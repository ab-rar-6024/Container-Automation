@{
    ViewData["Title"] = "Upload Workers";
}

<h2>Upload Workers (Excel)</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label">Select Excel File (.xlsx)</label>
        <input type="file" name="file" accept=".xlsx" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload & Assign</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
