@model ContainerAutomationApp.Models.Worker
@{
    ViewData["Title"] = "Edit Worker";
    var shifts = ViewBag.Shifts as List<ContainerAutomationApp.Models.Shift> ?? new();
    var cranes = ViewBag.Cranes as List<ContainerAutomationApp.Models.Crane> ?? new();
}

<h2>Edit Worker</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Certification" class="form-label">Certification</label>
        <select asp-for="Certification" class="form-control">
            <option value="">-- Select --</option>
            <option value="RTG" selected="@(Model.Certification == "RTG" ? "selected" : null)">RTG</option>
            <option value="QC" selected="@(Model.Certification == "QC" ? "selected" : null)">QC</option>
            <option value="Both" selected="@(Model.Certification == "Both" ? "selected" : null)">Both</option>
        </select>
        <span asp-validation-for="Certification" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedShiftId" class="form-label">Assigned Shift</label>
        <select asp-for="AssignedShiftId" class="form-control">
            <option value="">-- None --</option>
            @foreach (var s in shifts)
            {
                <option value="@s.Id" selected="@(Model.AssignedShiftId == s.Id ? "selected" : null)">
                    @s.Name
                </option>
            }
        </select>
        <span asp-validation-for="AssignedShiftId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedCraneId" class="form-label">Assigned Crane</label>
        <select asp-for="AssignedCraneId" class="form-control">
            <option value="">-- None --</option>
            @foreach (var c in cranes)
            {
                <option value="@c.Id" selected="@(Model.AssignedCraneId == c.Id ? "selected" : null)">
                    @c.Name (@c.Type)
                </option>
            }
        </select>
        <span asp-validation-for="AssignedCraneId" class="text-danger"></span>
    </div>

    @*
    <div class="form-group form-check">
        <input asp-for="LeaveRequest" class="form-check-input" type="checkbox" />
        <label asp-for="LeaveRequest" class="form-check-label">Leave Requested?</label>
    </div>
    *@

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
