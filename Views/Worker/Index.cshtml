@model IEnumerable<ContainerAutomationApp.Models.Worker>
@{
    ViewData["Title"] = "All Workers";
    var leaveMap = ViewBag.LeaveStatusMap as Dictionary<int, string> ?? new();
    var selectedStatus = ViewBag.SelectedStatus as string;
    var search = ViewBag.Search as string;
}

<h2>All Workers</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-success" asp-action="Create">‚ûï Add New Worker</a>
    <a class="btn btn-info" asp-controller="Worker" asp-action="ExportToExcel">üì§ Export to Excel</a>
</div>

<!-- üî• Delete All Workers -->
<div class="mb-3 d-flex justify-content-end">
    <form asp-action="DeleteAll" method="post" onsubmit="return confirm('Are you sure you want to delete ALL workers?');">
        <button type="submit" class="btn btn-danger">üóë Delete All Workers</button>
    </form>
</div>

<!-- üîç Filter Form -->
<form method="get" class="row g-2 mb-4">
    <div class="col-md-auto">
        <label class="form-label">Leave Status:</label>
        <select name="status" class="form-select" onchange="this.form.submit()">
            <option value="">-- All --</option>
            <option value="Pending" selected="@(selectedStatus == "Pending")">Pending</option>
            <option value="Approved" selected="@(selectedStatus == "Approved")">Approved</option>
            <option value="Rejected" selected="@(selectedStatus == "Rejected")">Rejected</option>
        </select>
    </div>
    <div class="col-md-auto">
        <label class="form-label">Search Name:</label>
        <input type="text" name="search" value="@search" placeholder="Search worker" class="form-control" />
    </div>
    <div class="col-md-auto d-flex align-items-end">
        <button type="submit" class="btn btn-primary">üîç Apply Filters</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Certification</th>
            <th>Leave Status</th>
            <th>Assigned Crane</th>
            <th>Assigned Shift</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="8" class="text-center text-muted">No workers found for current filters.</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                var status = leaveMap.ContainsKey(item.Id) ? leaveMap[item.Id] : "No";
                var badgeClass = status switch
                {
                    "Approved" => "success",
                    "Pending" => "warning",
                    "Rejected" => "danger",
                    _ => "secondary"
                };
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Certification</td>
                    <td><span class="badge bg-@badgeClass">@status</span></td>
                    <td>@(item.AssignedCrane?.Name ?? "Unassigned")</td>
                    <td>@(item.AssignedShift?.Name ?? "Unassigned")</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                           onclick="return confirm('Are you sure you want to delete this worker?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
