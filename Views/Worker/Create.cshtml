@model ContainerAutomationApp.Models.Worker
@{
    ViewData["Title"] = "Create Worker";
    var cranes = ViewBag.Cranes as List<ContainerAutomationApp.Models.Crane> ?? new();
    var shifts = ViewBag.Shifts as List<ContainerAutomationApp.Models.Shift> ?? new();
}

<h2>Create New Worker</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Certification" class="form-label">Certification</label>
        <select asp-for="Certification" class="form-control">
            <option value="">-- Select --</option>
            <option>RTG</option>
            <option>QC</option>
            <option>Both</option>
        </select>
        <span asp-validation-for="Certification" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedCraneId" class="form-label">Assign Crane</label>
        <select asp-for="AssignedCraneId" class="form-control">
            <option value="">-- None --</option>
            @foreach (var c in cranes)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <span asp-validation-for="AssignedCraneId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedShiftId" class="form-label">Assign Shift</label>
        <select asp-for="AssignedShiftId" class="form-control">
            <option value="">-- None --</option>
            @foreach (var s in shifts)
            {
                <option value="@s.Id">@s.Name</option>
            }
        </select>
        <span asp-validation-for="AssignedShiftId" class="text-danger"></span>
    </div>

     @*<!-- âœ… Leave Request Checkbox -->
    <div class="form-group form-check">
        <input asp-for="LeaveRequest" class="form-check-input" type="checkbox" />
        <label asp-for="LeaveRequest" class="form-check-label">Request Leave?</label>
    </div>
    *@

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
