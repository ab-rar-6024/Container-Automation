@{
    var isLoginPage = ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" &&
                      ViewContext.RouteData.Values["action"]?.ToString() == "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Container Automation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    @* Header and Navigation (except on login page) *@
    @if (!isLoginPage)
    {
        <header class="bg-dark text-white py-2 px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/images/logo.png" alt="Logo" width="40" height="40" class="me-2" />
                <h4 class="mb-0">Port Terminal Automation</h4>
            </div>
            <div>
                <span>Welcome, @Context.Session.GetString("AdminUsername")</span>
                <a href="/Leave" class="btn btn-sm btn-warning ms-3">
                    Pending Leaves
                    <span class="badge bg-danger" id="pending-count">0</span>
                </a>
            </div>
        </header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Menu</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Home/Dashboard">Dashboard</a></li>
                        <li><a class="dropdown-item" href="/Worker">Workers</a></li>
                        <li><a class="dropdown-item" href="/Crane">Cranes</a></li>
                        <li><a class="dropdown-item" href="/Shift">Shifts</a></li>
                        <li><a class="dropdown-item" href="/Leave">Leave Management</a></li>
                        <li><a class="dropdown-item" href="/CraneAssignment">Crane Assignments</a></li>
                        <li><a class="dropdown-item" href="/Container">Container Assignment</a></li>
                        <li><a class="dropdown-item" href="/Worker/UploadExcel">Upload Workers (Excel)</a></li>
                        <li><a class="dropdown-item text-danger" href="/Admin/Logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    }

    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-center text-white py-3 mt-auto">
        © 2025 Port Terminal Automation. All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)

    @* 🔧 Dynamic JS to fetch pending leave count *@
    <script>
        fetch('/Leave/PendingCount')
            .then(res => res.json())
            .then(data => {
                const count = document.getElementById("pending-count");
                if (count && data.count > 0) {
                    count.innerText = data.count;
                }
            });
    </script>
</body>
</html>
