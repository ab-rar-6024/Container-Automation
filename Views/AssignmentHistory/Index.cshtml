@model List<ContainerAutomationApp.Models.AssignmentHistory>

@{
    ViewData["Title"] = "Assignment History";
}

<h2>Today's Crane Assignments</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Worker</th>
            <th>Role</th>
            <th>Crane</th>
            <th>Shift</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Worker?.Name</td>
                <td>@item.Role</td>
                <td>@item.Crane?.Name (@item.Crane?.Type)</td>
                <td>@item.Shift?.Name</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>
